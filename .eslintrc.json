{
  "root": true,
  "env": {
    "es2021": true,
    "node": true,
    "browser": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "prefer-const": "warn",
    "no-unused-vars": ["warn", {"args": "none"}]
  },
  "overrides": [
    {
      "files": ["scripts/**/*.js", "server/**/*.js"],
      "env": {"node": true}
    },
    {
      "files": ["src/**/*.js"],
      "env": {"browser": true}
    }
  ]
}